{
  "name": "smart-changelists",
  "displayName": "Smart Changelists",
  "description": "JetBrains-style changelists for VS Code. Save snapshots of your changes, switch between versions, and commit selectively.",
  "version": "2.0.1",
  "publisher": "harungecit",
  "author": {
    "name": "Harun Geçit",
    "email": "info@harungecit.com",
    "url": "https://harungecit.dev"
  },
  "displayPublisherName": "Harun Geçit",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "changelists",
    "changelist",
    "intellij",
    "jetbrains",
    "shelve",
    "snapshot",
    "versioning",
    "git tools",
    "git extension",
    "phpstorm",
    "webstorm",
    "vscode git",
    "source control",
    "scm"
  ],
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/harungecit/smart-changelists"
  },
  "homepage": "https://github.com/harungecit/smart-changelists#readme",
  "bugs": {
    "url": "https://github.com/harungecit/smart-changelists/issues"
  },
  "activationEvents": [
    "workspaceContains:.git",
    "onView:smartChangelistsView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smartChangelists",
          "title": "Smart Changelists",
          "icon": "resources/icon-white.png"
        }
      ]
    },
    "views": {
      "smartChangelists": [
        {
          "id": "smartChangelistsView",
          "name": "Changelists",
          "contextualTitle": "Smart Changelists"
        }
      ]
    },
    "commands": [
      {
        "command": "smartChangelists.createChangelist",
        "title": "Create Changelist",
        "icon": "$(add)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.deleteChangelist",
        "title": "Delete Changelist",
        "icon": "$(trash)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.renameChangelist",
        "title": "Rename Changelist",
        "icon": "$(edit)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.shelveFile",
        "title": "Shelve to Changelist...",
        "icon": "$(archive)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.unshelveFile",
        "title": "Restore to Working",
        "icon": "$(export)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.unshelveAll",
        "title": "Restore All to Working",
        "icon": "$(export)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.applyAndStage",
        "title": "Apply & Stage",
        "icon": "$(git-commit)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.applyAllAndStage",
        "title": "Apply All & Stage",
        "icon": "$(git-commit)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.deleteShelvedFile",
        "title": "Delete Snapshot",
        "icon": "$(trash)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.commitChangelist",
        "title": "Commit Shelved Changelist",
        "icon": "$(check)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.commitWorkingChanges",
        "title": "Commit Working Changes",
        "icon": "$(check)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.refreshAll",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.exportChangelists",
        "title": "Export Changelists",
        "icon": "$(export)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.importChangelists",
        "title": "Import Changelists",
        "icon": "$(import)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.openFile",
        "title": "Open File",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.openDiff",
        "title": "Open Diff",
        "icon": "$(diff)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.previewShelved",
        "title": "Preview Shelved Changes",
        "icon": "$(preview)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.revertFile",
        "title": "Revert Changes",
        "icon": "$(discard)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.setActiveChangelist",
        "title": "Set as Active Changelist",
        "icon": "$(star-full)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.moveToChangelist",
        "title": "Shelve to Changelist...",
        "icon": "$(archive)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.addToChat",
        "title": "Add to Chat",
        "icon": "$(comment-discussion)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.addWorkingFileToChat",
        "title": "Add to Chat",
        "icon": "$(comment-discussion)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.compareWith",
        "title": "Compare with...",
        "icon": "$(git-compare)",
        "category": "Smart Changelists"
      },
      {
        "command": "smartChangelists.compareAllVersions",
        "title": "Compare All Versions",
        "icon": "$(versions)",
        "category": "Smart Changelists"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "smartChangelists.createChangelist",
          "when": "smartChangelists.enabled"
        },
        {
          "command": "smartChangelists.refreshAll",
          "when": "smartChangelists.enabled"
        },
        {
          "command": "smartChangelists.exportChangelists",
          "when": "smartChangelists.enabled"
        },
        {
          "command": "smartChangelists.importChangelists",
          "when": "smartChangelists.enabled"
        }
      ],
      "view/title": [
        {
          "command": "smartChangelists.createChangelist",
          "when": "view == smartChangelistsView",
          "group": "navigation@1"
        },
        {
          "command": "smartChangelists.refreshAll",
          "when": "view == smartChangelistsView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "smartChangelists.commitChangelist",
          "when": "view == smartChangelistsView && viewItem =~ /changelist/",
          "group": "inline@1"
        },
        {
          "command": "smartChangelists.setActiveChangelist",
          "when": "view == smartChangelistsView && viewItem == changelist",
          "group": "inline@2"
        },
        {
          "command": "smartChangelists.renameChangelist",
          "when": "view == smartChangelistsView && viewItem =~ /changelist/",
          "group": "1_changelist@1"
        },
        {
          "command": "smartChangelists.deleteChangelist",
          "when": "view == smartChangelistsView && viewItem == changelist",
          "group": "1_changelist@2"
        },
        {
          "command": "smartChangelists.unshelveAll",
          "when": "view == smartChangelistsView && viewItem =~ /changelist/",
          "group": "2_shelve@1"
        },
        {
          "command": "smartChangelists.applyAllAndStage",
          "when": "view == smartChangelistsView && viewItem =~ /changelist/",
          "group": "2_shelve@2"
        },
        {
          "command": "smartChangelists.shelveFile",
          "when": "view == smartChangelistsView && viewItem == working-file",
          "group": "1_file@1"
        },
        {
          "command": "smartChangelists.openDiff",
          "when": "view == smartChangelistsView && viewItem == working-file",
          "group": "inline@1"
        },
        {
          "command": "smartChangelists.revertFile",
          "when": "view == smartChangelistsView && viewItem == working-file",
          "group": "inline@2"
        },
        {
          "command": "smartChangelists.openFile",
          "when": "view == smartChangelistsView && viewItem == working-file",
          "group": "2_file@1"
        },
        {
          "command": "smartChangelists.applyAndStage",
          "when": "view == smartChangelistsView && viewItem == shelved-file",
          "group": "inline@1"
        },
        {
          "command": "smartChangelists.deleteShelvedFile",
          "when": "view == smartChangelistsView && viewItem == shelved-file",
          "group": "inline@2"
        },
        {
          "command": "smartChangelists.unshelveFile",
          "when": "view == smartChangelistsView && viewItem == shelved-file",
          "group": "1_shelved@1"
        },
        {
          "command": "smartChangelists.applyAndStage",
          "when": "view == smartChangelistsView && viewItem == shelved-file",
          "group": "1_shelved@2"
        },
        {
          "command": "smartChangelists.previewShelved",
          "when": "view == smartChangelistsView && viewItem == shelved-file",
          "group": "1_shelved@3"
        },
        {
          "command": "smartChangelists.addToChat",
          "when": "view == smartChangelistsView && viewItem == shelved-file",
          "group": "2_chat@1"
        },
        {
          "command": "smartChangelists.addWorkingFileToChat",
          "when": "view == smartChangelistsView && viewItem == working-file",
          "group": "2_file@2"
        },
        {
          "command": "smartChangelists.compareWith",
          "when": "view == smartChangelistsView && viewItem == shelved-file && config.smartChangelists.enableVersionComparison",
          "group": "3_compare@1"
        },
        {
          "command": "smartChangelists.compareAllVersions",
          "when": "view == smartChangelistsView && viewItem == shelved-file && config.smartChangelists.enableVersionComparison",
          "group": "3_compare@2"
        }
      ]
    },
    "configuration": {
      "title": "Smart Changelists",
      "properties": {
        "smartChangelists.showEmptyChangelists": {
          "type": "boolean",
          "default": true,
          "description": "Show changelists even when they have no files"
        },
        "smartChangelists.autoRefreshOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh changelists when files are saved"
        },
        "smartChangelists.confirmBeforeCommit": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before committing a changelist"
        },
        "smartChangelists.confirmBeforeRevert": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before reverting changes"
        },
        "smartChangelists.saveSnapshotsToFile": {
          "type": "boolean",
          "default": false,
          "description": "Save snapshots as files to .smartchangelists/ folder for CLI tool access (Claude Code, Gemini, etc.)"
        },
        "smartChangelists.enableVersionComparison": {
          "type": "boolean",
          "default": false,
          "description": "Enable multi-version comparison and merge features (experimental)"
        }
      }
    },
    "keybindings": [
      {
        "command": "smartChangelists.createChangelist",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "smartChangelists.enabled"
      },
      {
        "command": "smartChangelists.moveToChangelist",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "smartChangelists.enabled && scmResourceState"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "pretest": "npm run build && tsc -p ./tsconfig.test.json",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "simple-git": "^3.21.0"
  }
}
